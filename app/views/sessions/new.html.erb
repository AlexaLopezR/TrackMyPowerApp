<% provide(:title, "Log in") %>
<div class="login_wrapper">
  <div class="animate form login_form">
    <section class="login_content">
      <%= form_for(:session, url: login_path) do |f| %>
        <h1>Log in</h1>
        <%= f.text_field :email, class: 'form-control', placeholder: 'Email or Username'%>

        <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>

        <!--<div><%= f.submit "Log in", class: "btn btn-primary" %> </div>-->
        <%= f.button "Log in", class: "btn btn-primary" %>
        <div class="clearfix"></div>

        <div class="separator">
          <small>New user? <%= link_to "Sign up now!", signup_path, class: 'to_register'%></small>
          <div class="clearfix"></div>
          <br />
          <div>
            <h1><i class="fa fa-bolt"></i> <%= full_title("") %></h1>
            <small>Â©<%= Time.current.year %> All Rights Reserved. Universidad del Norte.</small>
          </div>
        </div>
      <% end %>
    </section>
  </div>
</div>
